{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "PostgreSql": "Host=localhost;Port=5433;Database=usersdb;Username=postgres;Password=1;"
  },
  "JWT": {
    "Issuer": "Beyza Özeren",
    "Audience": "www.beyzaozeren.net",
    "SecretKey": "Beyza Özeren secret key my secret... Beyza Özeren secret key my secret... Beyza Özeren secret key my secret... Beyza Özeren secret key my secret..."
  },
  "ReverseProxy": {
    "Routes": {
      "productsRoute": {
        "ClusterId": "productsCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/products/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/products"
          }
        ]
      },
      "shoppingCartsRoute": {
        "ClusterId": "shoppingCartsCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/shoppingCarts/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/shoppingCarts"
          }
        ]
      },
      "ordersRoute": {
        "ClusterId": "ordersCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/orders"
          }
        ]
      },

      "identityRoute": {
        "ClusterId": "identityCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
        // Buraya AuthorizationPolicy KOYMADIK,
        // çünkü login/register public olacak.
      }
    },
    "Clusters": {
      "productsCluster": {
        "Destinations": {
          "productsDestination": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "shoppingCartsCluster": {
        "Destinations": {
          "shoppingCartsDestination": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "ordersCluster": {
        "Destinations": {
          "ordersDestination": {
            "Address": "http://localhost:5003/"
          }
        }
      },

      "identityCluster": {
        "Destinations": {
          "identityDestination": {
            "Address": "http://localhost:5004/"
          }
        }
      }
    }
  }
}
